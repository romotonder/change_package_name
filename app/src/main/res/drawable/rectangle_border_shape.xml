<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <padding android:bottom="10sp"/>
            <padding android:top="10sp"/>
            <padding android:left="5sp"/>

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1sp" android:color="@color/colorAccent" />
            <padding android:bottom="5dp"/>
            <corners android:topLeftRadius="10sp" android:topRightRadius="10sp"
                android:bottomLeftRadius="10sp" android:bottomRightRadius="10sp"/>
        </shape>
    </item>
</layer-list>