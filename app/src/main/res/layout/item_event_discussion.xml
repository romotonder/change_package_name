<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:backgroundTint="@color/OffWhite"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_outline_account_circle_24"
                android:background="@drawable/shape_circle_background_transparent"
                android:tint="@color/subtitle_text_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_username"
                    style="@style/DiscussionItemSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sauvik"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/DiscussionItemSubtitle"
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="16 jul ,2020"
                    android:layout_marginStart="0dp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgmenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:tint="@color/subtitle_text_color" />
        </LinearLayout>

        <View
            style="@style/Divider"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_comment"
            style="@style/DiscussionItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"

            android:gravity="center_vertical"
            android:text="New Texst Discussion"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_likecount"
                style="@style/DiscussionItemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0 Like"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_commentscount"
                style="@style/DiscussionItemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0 Comment"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <View
            style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_thumb_up_24"
                android:tint="@color/Gray"
                android:layout_gravity="center_vertical"
                />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/DiscussionItemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/like"
                android:layout_marginStart="4dp"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_mode_comment_24"
                android:id="@+id/btn_comment"
                android:tint="@color/Gray"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/DiscussionItemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/comments"/>
        </LinearLayout>
        <View
            style="@style/Divider" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
