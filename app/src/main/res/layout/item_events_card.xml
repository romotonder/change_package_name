<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/White"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/eChildImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/app_placeholder" />
        </FrameLayout>

        <!--postTitle-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/esubTitle"
            style="@style/CardTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/title_text_color"
            tools:text="Smag pa Marsken 2020" />

        <!--published Date-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/edate"
            style="@style/CardTextSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="19 september,2020" />
        <!--address-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/eaddress"
            style="@style/CardTextSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="Kolkata,West Bengal,India " />
        <!--people interested-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/epeopleInterested"
            style="@style/CardTextSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="10 people interested" />

        <View
            style="@style/Divider"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
        <!--hosted by-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ehostedBy"
            style="@style/CardTextSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            tools:text="Hosted by Test" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
